GEMVER_SRC = \
	$(GEMVER_ROOT)/gemver.c \
	$(POLYBENCH_ROOT)/utilities/polybench.c

$(GEMVER_ROOT)/clang: $(GEMVER_SRC)
	$(VERBOSE) clang -O3 $(CPPFLAGS) $? -o $(GEMVER_ROOT)/$(@F) $(EXTRA_FLAGS)

$(GEMVER_ROOT)/gcc: $(GEMVER_SRC)
	${VERBOSE} gcc -O3 ${CPPFLAGS} $? -o $(GEMVER_ROOT)/$(@F) ${EXTRA_FLAGS}

$(GEMVER_ROOT)/jlm-%: llvm-strip
	${POLYBENCH_ROOT}/jlc.py -s $(GEMVER_ROOT)/jlmstats.log $(CPPFLAGS) $(JLMFLAGS) $(PIPELINE) $(LLCOPT) $(GEMVER_SRC) -o $(GEMVER_ROOT)/$(@F) $(EXTRA_FLAGS)

$(GEMVER_ROOT)/OPTO%: llvm-strip
	${POLYBENCH_ROOT}/jlc.py $(CPPFLAGS) $(LLVMOPT) $(PIPELINE) $(LLCOPT) $(GEMVER_SRC) -o $(GEMVER_ROOT)/$(@F) $(EXTRA_FLAGS)
